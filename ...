                    <div class="product-info">
                        <h3 class="product-title">Nike Air Jordan 1</h3>
                        <div class="product-price">€ 320</div>
                        <p class="product-description">Scarpe Nike Air Jordan 1 Retro High, taglia 42, indossate poche volte.</p>
                        <div class="product-actions">
                            <a href="#contact" class="btn btn-primary">Contatta</a>
                            <button class="btn btn-secondary btn-buy">Acquista</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tracking Section -->
    <section class="tracking" id="tracking">
        <div class="container">
            <h2 class="section-title">Traccia la tua Spedizione</h2>
            <div class="tracking-container">
                <div class="tracking-form">
                    <div class="form-group">
                        <label for="trackingNumber">Codice di Tracciamento</label>
                        <input type="text" id="trackingNumber" placeholder="Inserisci il codice di tracciamento">
                    </div>
                    <button class="submit-button" id="trackButton">
                        <i class="fas fa-search"></i> Traccia Spedizione
                    </button>
                    
                    <div id="trackingResult" style="margin-top: 2rem; padding: 1.5rem; background: #f9f9f9; border-radius: var(--radius); display: none;">
                        <h4 style="margin-bottom: 1rem; color: var(--primary);">Stato della Spedizione</h4>
                        <p id="trackingStatus">In elaborazione...</p>
                        <p id="trackingDetails" style="margin-top: 0.5rem; font-size: 0.9rem; color: #666;"></p>
                    </div>
                </div>
                
                <div class="tracking-visual">
                    <div class="tracking-steps">
                        <div class="step active">
