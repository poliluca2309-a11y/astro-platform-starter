    <!-- Payment Modal -->
    <div class="modal" id="paymentModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2><i class="fas fa-credit-card"></i> Completa l'Acquisto</h2>
                <button class="close-modal" id="closePaymentModal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="fullName">Nome Completo</label>
                        <input type="text" id="fullName" placeholder="Mario Rossi">
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" placeholder="mario@example.com">
                    </div>
                    
                    <div class="form-group full-width">
                        <label for="address">Indirizzo di Spedizione</label>
                        <textarea id="address" placeholder="Via Roma 123, 00100 Roma, Italia"></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="cardNumber">Numero Carta</label>
                        <input type="text" id="cardNumber" placeholder="1234 5678 9012 3456">
                    </div>
                    
                    <div class="form-group">
                        <label for="cardExpiry">Scadenza</label>
                        <input type="text" id="cardExpiry" placeholder="MM/AA">
                    </div>
                    
                    <div class="form-group">
                        <label for="cardCVC">CVC</label>
                        <input type="text" id="cardCVC" placeholder="123">
                    </div>
                </div>
                
                <div style="text-align: center; margin: 2rem 0;">
                    <p style="font-weight: 600; margin-bottom: 1rem;">Oppure paga con</p>
                    <div id="paypal-button-container"></div>
                </div>
                
                <button class="submit-button" id="confirmPayment">
                    <i class="fas fa-check-circle"></i> Conferma Pagamento
